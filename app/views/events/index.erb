<html>
  <body>
    <h1>Listing Books</h1>

    <table>
      <tr>
        <th>Title</th>
        <th>Summary</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.content %></td>
        <td><%= link_to "Show", event %></td>
        <td><%= link_to "Edit", edit_event_path(event) %></td>
        <td><%= link_to "Remove", event, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
    </table>

    <br>

    <%= link_to "New event", new_book_path %>
  </body>
</html>
